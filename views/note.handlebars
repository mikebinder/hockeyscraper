<form class="form-horizontal" action="/articles/{{article.id}}" method="POST">
  
  <h2><a href="{{article.link}}" target="_blank">{{article.title}}</a></h2>

  <div class="form-group">
    <label for="body" class="col-sm-2 control-label">Note</label>
    <div class="col-sm-10">
      <textarea class="form-control" rows="2" id="body" name="body" required="true"></textarea> 
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Note</button>
    </div>
  </div>
</form>

{{#each article.note}}
  <div class="panel panel-default">
    <div class="panel-heading input-group">
      <h3 class="panel-title">{{this.title}}</h3>
      <span class="input-group-btn">
        <form action="/articles/{{../article.id}}/delete/{{this.id}}" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </span>
    </div>
    <div class="panel-body">
      {{this.body}}
      
    </div>
  </div>
{{/each}}


